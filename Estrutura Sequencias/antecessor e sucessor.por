programa
{
	
	funcao inicio()
	{
		inteiro n1, ant,suc
		
		escreva("Digite um número: ")
		leia(n1)
		ant=(n1-1)
		suc=(n1+1)
		escreva("O número antecessor de ", n1, " é o número: ", ant)
		escreva("\nO número sucessor de ", n1, " é o número: ", suc)
	}
}
